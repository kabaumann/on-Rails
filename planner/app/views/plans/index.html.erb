<h1>Listing plans</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Where</th>
      <th>What</th>
      <th>When</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.Title %></td>
        <td><%= plan.where %></td>
        <td><%= plan.what %></td>
        <td><%= plan.when %></td>
        <td><%= plan.done %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
